doctype html

html
  block link
    -var active = 'home';
  
  -var menu = {'home': '/home', 'swag': '/swag'};
  
  head
    link(rel='stylesheet', href='../css/bulma.css')
    link(rel='stylesheet', href='../css/style.css')
  
  body
    nav
      ul
        each val, key in menu
          li
            if key == active
              a.active(href=val, title=key) #{key}
            else
              a(href=val, title=key) #{key}
              
block content